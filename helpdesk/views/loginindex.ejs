<body>
<div class="container"  ng-app="HDAuthentication" ng-controller="HDLoginController">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                    <div style="text-align: center">
                        <img src="hdesk/image/smilyhelp.png" alt="Mountain View" style="width:70px;height:70px;background: gray;align-content: center">
                    </div>

<div style="text-align: center;border-bottom: rgb(221, 221, 221) solid 1px;padding-bottom: 5%;">Sign in to HelpDesk</div>
                      <!--  <div class="panel-heading">
                        Sign In
                        </div>-->
                        <div class="panel-body" style="margin-top: 3%">
                            <form ng-submit="login()" role="form">
                                <fieldset>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="E-mail" name="username" id="username"  ng-model="username">
                                        <span ng-show="form.username.$dirty && form.username.$error.required" class="help-block">Username is required</span>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Password" name="password" id="password" ng-model="password" type="password" value="">
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                        </label>
                                    </div>
                                    <!-- Change this to a button or input when using this as a form -->
                                    <!--                            <a href="index.html" class="btn btn-lg btn-success btn-block">Login</a>-->
                                    <button type="submit" ng-disabled="form.$invalid || dataLoading" class="btn btn-lg btn-success btn-block">Sign in</button>
                                </fieldset>
                            </form>
                        </div>

                    </div>
                    <div class=" panel panel-default">
                        <div class="panel-body" style="text-align: center; font-size: 90%">
                            New to HelpDesk? <a href="register">Create an account</a>
                        </div>
                        <div class="panel-body"  style="text-align: center; font-size: 90%">
                           <b>OR</b>
                            <a class="btn btn-block btn-social btn-google-plus" href="api/auth/google">
                                <i class="fa fa-google-plus" ></i> Sign in with Google
                            </a>
                        </div>
                    </div>

                </div>
            </div>



        </div>

